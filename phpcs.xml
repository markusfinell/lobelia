<?xml version="1.0"?>
<ruleset name="My Project">
    <description>My PHP_CodeSniffer Rules</description>
    <file>./src</file>
    <arg name="colors"/>
    <rule ref="PSR2"/>
    <!-- Exclude the rule for writing PHPDocs for functions -->
    <exclude name="Squiz.Commenting.FunctionComment.Missing"/>
    <!-- Exclude the rule about declaring new symbols and side effects -->
    <exclude name="Squiz.Files.SideEffects.FoundWithSymbols"/>
</ruleset>
